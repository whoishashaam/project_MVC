@model List<Category>


<div class="Container">

    <div class="row pt-4 pb-3">
    <div class="col-6">
    <h2 class="text-dark"> CATEGORY LIST</h2>

    </div>
    <div class="col-6 text-end">
        <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
           <i class="bi bi-plus-lg"></i> Create New Category
        </a>
        </div>
    </div>
<table class="table table-bordered table-striped">
    <thead>
   <tr>
        <th>
            Category Name
        </th>
        <th>
            Display order 
        </th>
        <th>
            Actions 
        </th>
    </tr>
    </thead>

    <tbody>
        @foreach(var obj in Model){
          <tr>
             <td>@obj.Name</td>
             <td>@obj.DisplayOrder</td>
             <td>
                 <div class=" w-75 btn-group" role="group">

                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn rounded-pill ms-4 btn-primary">
                     <i class="bi bi-pencil-square"></i> Edit
                 </a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn rounded-pill ms-5 btn-danger">
                     <i class="bi bi-trash"></i> Delete
                 </a>
                 
                 </div>
          </tr>
        }
    </tbody>
</table>
    </div>