@model Category 
<form method="post" style="width: 100%">
    <div class="border p-3 mt-4">
         <div class="row pb-2">
           <h2 class="text-dark">
            Create Category
           </h2>
            <hr />
         </div>

        <div class="mb-3 p-1 row">
            <label asp-for="Name"  class="text-dark p-0"></label>
            <input asp-for="Name" placeholder="Type here.." class="form-control" required />
         </div>
        <div class="mb-3 p-1 row">
            <label asp-for="DisplayOrder" class="text-dark p-0"></label>
            <input asp-for="DisplayOrder" placeholder="Type here.." required class="form-control" />
        </div>

       <div class="row"> 

            <div class="col-6 col-md-3">
            <button type="submit" class=" btn btn-success form-control "><i class="bi bi-file-plus"></i> Create</button>
            </div>

            <div class="col-6 col-md-3">
           <a asp-controller="Category" asp-action="Index" class="btn btn-primary form-control" > <i class="bi bi-arrow-left-circle-fill"></i> Back to List </a>
           </div>

        </div>
    </div>


</form>